<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
	<isExposed>true</isExposed>
	<masterLabel>User Classes</masterLabel>
	<targets>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
	</targets>
	<targetConfigs>
		<targetConfig targets="lightningCommunity__Default">
			<property
					type="Integer"
					name="tileHeight"
					label="Height for cards in pixels"
					default="104"
			/>
			<property
					type="String"
					name="labelHyperlink"
					label="Label for details hyperlink"
					default="View Details"
					translatable="true"
			/>

			<property
					type="String"
					name="labelClassStarts"
					label="Label for 'Class Starts'."
					default="Class Starts"
					translatable="true"
			/>
			<property
					type="String"
					name="statusEnrolled"
					label="Label for status 'Enrolled'."
					default="Enrolled"
					translatable="true"
			/>
			<property
					type="String"
					name="statusNoShow"
					label="Label for status 'No Show'."
					default="No Show"
					translatable="true"
			/>
			<property
					type="String"
					name="statusAttendedComplete"
					label="Label for status 'Attended - Complete'."
					default="Completed"
					translatable="true"
			/>
			<property
					type="String"
					name="statusAttendedInComplete"
					label="Label for status 'Attended - Incomplete'."
					default="Incomplete"
					translatable="true"
			/>
			<property
					type="String"
					name="statusCourseComplete"
					label="Label for status 'Course Complete'."
					default="Completed"
					translatable="true"
			/>
			<property
					type="String"
					name="statusCourseInComplete"
					label="Label for status 'Course Incomplete'."
					default="Incomplete"
					translatable="true"
			/>
		</targetConfig>
	</targetConfigs>
</LightningComponentBundle>