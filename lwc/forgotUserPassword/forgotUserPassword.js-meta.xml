<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>59.0</apiVersion>
	<isExposed>true</isExposed>
	<masterLabel>Forgot User Password</masterLabel>
	<targets>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
		<target>lightning__AppPage</target>
	</targets>
	<targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
              type="String"
              name="headerText"
              label="Header Text"
              default="Forgot Password"
							translatable="true"
            />
            <property
              type="String"
              name="headerDescription"
              label="Header Description"
              default="Please enter your email address. If a contact exists, we'll send a link."
							translatable="true"
            />
            <property
              type="String"
              name="fieldLabel"
              label="Field Label"
              default="Email address"
							translatable="true"
            />
            <property
              type="String"
              name="sendButtonLabel"
              label="Send Button Label"
              default="Send Recovery Link"
							translatable="true"
            />
            <property
              type="String"
              name="backButtonLabel"
              label="Back Button Label"
              default="Go Back"
							translatable="true"
            />
						<property
              type="String"
              name="resendButtonLabel"
              label="Resend Button Label"
              default="Resend Link"
							translatable="true"
            />
            <property
              type="String"
              name="emailSuccessfullyTriggeredMsg"
              label="Email Successfully Triggered Msg"
              default="An email has been sent to you with a link to change your password."
							translatable="true"
            />
            <property
              type="String"
              name="emailSentLabel"
              label="Email Sent Label"
              default="Email Sent!"
							translatable="true"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>